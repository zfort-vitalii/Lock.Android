<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/com_auth0_lock_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/com_auth0_lock_space"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/com_auth0_lock_load_error" />

    <android.support.v4.widget.Space
        android:id="@+id/com_auth0_lock_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <com.auth0.android.lock.views.LineSpacingTextView
        android:id="@+id/com_auth0_lock_error_title"
        style="@style/Lock.Theme.Text.Title.Error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/com_auth0_lock_space"
        android:layout_marginTop="@dimen/com_auth0_lock_widget_vertical_margin_mode_selection" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/com_auth0_lock_error_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/com_auth0_lock_widget_vertical_margin_field"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/com_auth0_lock_error"
            style="@style/Lock.Theme.Text.Subtitle.Error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/com_auth0_lock_widget_vertical_margin_social"
            android:paddingTop="@dimen/com_auth0_lock_widget_vertical_margin_social"
            tools:text="@string/com_auth0_lock_unrecoverable_error" />

        <TextView
            android:id="@+id/com_auth0_lock_error_resolution"
            style="@style/Lock.Theme.Text.Subtitle.Error.Resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/com_auth0_lock_widget_vertical_margin_social"
            android:paddingTop="@dimen/com_auth0_lock_widget_vertical_margin_social"
            tools:text="@string/com_auth0_lock_unrecoverable_error_resolution" />
    </LinearLayout>


</RelativeLayout>